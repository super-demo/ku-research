{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "rules": {
    "import/no-duplicates": "error",
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          ["parent", "sibling", "index"]
        ],
        "newlines-between": "always",
        "alphabetize": {
          // FYI: Commented out because it's not working as expected
          // "order": "asc",
          "caseInsensitive": true
        }
      }
    ],
    "comma-dangle": ["error", "never"],
    "semi": ["error", "never"]
  }
}
